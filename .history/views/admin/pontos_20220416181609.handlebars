<h2>Lista de Usuários</h2>
<hr />
<a href="/usuarios/registro">
  <button class="btn btn-success">Novo Usuário</button></a>
<hr />
{{#each pontos}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>Matrícula: {{matricula}}</h4>
      <small>Data de registro: {{date}}</small>
      <br />
      <small>{{#ifEquals tipo "0"}} Chegada {{/ifEquals}}</small>
      <small>{{#ifEquals tipo "1"}} Saída {{/ifEquals}}</small>
    </div>
  </div>
{{else}}
  <h4 class="mt-03"> Nenhuma usuário registrado!</h4>

{{/each}}
